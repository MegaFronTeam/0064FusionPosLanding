mixin sCatalog(h2)
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		+e.slider--js.swiper--js
			.swiper-wrapper
				+brandCard('Для фастфуда', '', 6)
				+brandCard('Для ресторанов', 'Быстрая настройка, управление технологиями настройка, управление', 5)
				+brandCard('Для кафе', '', 4)
				+brandCard('Для пекарен', '', 3)
				+brandCard('Пиццериям', '', 2)
				+brandCard('Для фудтрака', '', 5)
				+brandCard('Для кафе', ' Быстрая настройка, управление технологиями настройка, управление', 4)
				+brandCard('Для пекарен', '', 3)
				+brandCard('Пиццериям', '', 2)
				+brandCard('Для фудтрака', '', 5)
	// end sPartners


mixin brandCard(t, p, img)
	.swiper-slide
		+b.product-card
			+e.img-wrap
				+img(src=`img/product-${img}.png`, alt="").img.img-bg
			+e.content
				.h5=t
				if p
					.small=p
				else
					.small Быстрая настройка, управление технологиями
			+e.bottom
				+e.btn.btn-sm.btn.btn-dark(href='#') Подробнее

	// end sCatalog